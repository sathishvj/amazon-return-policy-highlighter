{
  "manifest_version": 3,
  "name": "Return policy highlighter",
  "version": "0.2",
  "description": "Highlights return policy of items on amazon and flpkart.",
  "permissions": ["tabs"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png",
    "512": "images/icon-512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com.au/*",
        "https://www.amazon.at/*",
        "https://www.amazon.com.br/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.cn/*",
        "https://www.amazon.cz/*",
        "https://www.amazon.eu/*",
        "https://www.egypt.souq.com/*",
        "https://www.amazon.fr/*",
        "https://www.amazon.de/*",
        "https://www.amazon.com/global/*",
        "https://www.amazon.in/*",
        "https://www.amazon.it/*",
        "https://www.amazon.co.jp/*",
        "https://www.uae.souq.com/kw-en//*",
        "https://www.amazon.com.mx/*",
        "https://www.amazon.nl/*",
        "https://www.amazon.pl/*",
        "https://www.saudi.souq.com/*",
        "https://www.amazon.com.sg/*",
        "https://www.amazon.es/*",
        "https://www.amazon.de/tr/*",
        "https://www.uae.souq.com/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.com/*",
        "https://www.flipkart.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
